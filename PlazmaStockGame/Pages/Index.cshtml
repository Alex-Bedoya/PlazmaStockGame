@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<form method="post">
    <div class="container w-25 mx-auto my-auto mt-5">
        <div class="row">
            <div class="col">
                <label asp-for="Ticker" class="text-center">Please enter a stock Indentifier</label>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input asp-for="Ticker" class="form-control w-100" />
                <span class="text-danger" asp-validation-for="Ticker"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col float-end">
                <button type="submit" class="btn btn-primary">Select</button>
            </div>
        </div>
    </div>
</form>